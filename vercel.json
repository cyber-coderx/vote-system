{
  "version": 2,
  "builds": [
    // Build serverless functions
    { "src": "api/vote.js", "use": "@vercel/node" },
    { "src": "api/getVotes.js", "use": "@vercel/node" },
    // Build static files
    { "src": "public/index.html", "use": "@vercel/static" },
    { "src": "public/css/styles.css", "use": "@vercel/static" },
    { "src": "public/js/script.js", "use": "@vercel/static" }
  ],
  "routes": [
    // API routes
    { "src": "/api/vote", "dest": "/api/vote.js" },
    { "src": "/api/getVotes", "dest": "/api/getVotes.js" },
    // Static file routes
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "POSTGRES_URL": "@postgres_url",
    "POSTGRES_PRISMA_URL": "@postgres_prisma_url",
    "POSTGRES_URL_NO_SSL": "@postgres_url_no_ssl",
    "POSTGRES_URL_NON_POOLING": "@postgres_url_non_pooling",
    "POSTGRES_USER": "@postgres_user",
    "POSTGRES_HOST": "@postgres_host",
    "POSTGRES_PASSWORD": "@postgres_password",
    "POSTGRES_DATABASE": "@postgres_database"
  }
}
